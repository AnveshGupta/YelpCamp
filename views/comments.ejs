<%- include("partials/header") %>
<div class="container">
    <h1 class="display-5 text-center">Add a new Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action= "/campgrounds/<%= campground._id %>" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="text" placeholder="Comment"></textarea>
            </div>         
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href=<%="/campgrounds/"+campground._id%> >Go Back</a>
    </div>
</div>

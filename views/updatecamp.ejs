<%- include("partials/header") %>
<div class="container">
    <h1 class="display-5 text-center">Create a New Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= camp._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="camp[name]" value = "<%= camp.name %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[src]" value = "<%= camp.src %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[des]" value = "<%= camp.des %>" >
            </div>            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("partials/footer") %>
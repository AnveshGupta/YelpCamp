<%- include("partials/header") %>
<div class="container">
    <h1 class="display-5 text-center">Add a new Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action= "/campgrounds/<%= campgroundid + "/"+ comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="text"><%= comment.text %></textarea>
            </div>         
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href=<%="/campgrounds/"+ campgroundid %> >Go Back</a>
    </div>
</div>
<%- include("partials/footer") %>